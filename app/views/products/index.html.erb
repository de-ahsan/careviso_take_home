<div class="container mt-5">
  <h1 class="display-4 text-center mb-5">All Products</h1>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Product ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', product, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "Are you sure you want to delete this product?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary mb-3' %>
</div>
