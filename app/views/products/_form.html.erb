<div class="form-container">
  <%= form_for @product, html: { class: 'mt-5' } do |f| %>
    <h3 class="mb-4">New Product</h3>

    <div class="mb-3">
      <%= f.label :name, "Product Name", class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.submit "Create Product", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
