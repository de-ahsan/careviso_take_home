<div class="container mt-5">

  <h1 class="display-4 text-center mb-5">Product Detail</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Package ID: <%= @product.id %></h5>
      <p class="card-text">
        Name: <%= @product.name %>
      </p>
    </div>
  </div>

  <div class="text-center">
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning btn-sm mr-2' %> 
    <%= link_to 'Delete', @product, method: :delete, class: 'btn btn-danger btn-sm' %> 
  </div>

</div>
