<div class="form-container">
  <%= form_for @package, html: { class: 'mt-5' } do |f| %>
    <h3 class="mb-4">New Package</h3>

    <div class="mb-3">
      <%= f.label :name, "Package Name", class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    
    <div class="mb-3">
      <%= f.label :product_ids, "Products", class: 'form-label' %>
      <%= f.collection_select :product_ids, Product.all, :id, :name, {}, { multiple: true, id: 'products-select', class: 'form-select', required: true } %>
    </div>

    <div class="mb-3">
      <%= f.submit "Create Package", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
