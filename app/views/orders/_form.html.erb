<div class="form-container">
<%= form_for @order, html: { class: 'mt-5' } do |f| %>
  <h3 class="mb-4">Select Products for this Order:</h3>
  
  <div class="mb-3">
    <%= f.label :product_ids, "Products", class: 'form-label' %>
    <%= f.collection_select :product_ids, Product.all, :id, :name, {}, { multiple: true, id: 'products-select', class: 'form-select', required: true } %>
  </div>

  <div class="mb-3">
    <%= f.submit "Submit Order", class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
