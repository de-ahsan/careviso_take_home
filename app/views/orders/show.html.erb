<div class="container mt-5">
  <h1 class="display-4 text-center mb-5">Order Details</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Order ID: <%= @order.id %></h5>
      <p class="card-text">
        Products: <%= @order.products.map(&:name).join(', ') %>
      </p>
    </div>
  </div>

  <div class="text-center">
    <%= link_to 'Edit', edit_order_path(@order), class: 'btn btn-warning btn-sm mr-2' %> 
    <%= link_to 'Delete', @order, method: :delete, class: 'btn btn-danger btn-sm' %> 
  </div>
</div>
